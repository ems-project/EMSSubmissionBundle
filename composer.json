{
	"name" : "elasticms/submission-bundle",
	"description" : "Submit data based on elasticms configurations",
	"type" : "symfony-bundle",
	"keywords" : [
		"elasticms"
	],
	"license" : "MIT",
	"authors" : [
		{
			"name" : "EMS Community",
			"homepage" : "https://github.com/ems-project/EMSSubmissionBundle/contributors"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable" : true,
	"require" : {
		"php" : "^7.4",
		"ext-json": "*",
      	"ext-zip": "*",
		"elasticms/form-bundle" : "4.0.x-dev",
		"league/flysystem-memory": "^1.0",
		"league/flysystem-sftp": "^1.0",
		"ramsey/uuid-doctrine": "^1.6",
		"symfony/framework-bundle": "^4.4|^5.0",
		"symfony/http-client": "^4.4|^5.0",
		"symfony/mailer": "^4.4|^5.0",
		"symfony/orm-pack": "^2.0",
		"symfony/twig-bundle": "^4.4|^5.0",
		"twig/twig" : "^2.14"
    },
	"require-dev" : {
		"friendsofphp/php-cs-fixer" : "^3.0",
		"phpstan/phpstan": "^0.12",
		"symfony/test-pack": "^1.0"
	},
	"autoload" : {
		"psr-4" : {
			"EMS\\SubmissionBundle\\" : "src/"
		}
	},
	"autoload-dev" : {
		"psr-4" : {
			"EMS\\SubmissionBundle\\Tests\\" : "tests/"
		}
	},
	"config": {
		"lock": false,
		"sort-packages": true
	},
	"scripts": {
		"phpcs": "php-cs-fixer fix",
		"phpstan": "phpstan analyse --memory-limit 1G",
		"phpunit": "phpunit",
		"phpall": "php-cs-fixer fix && phpunit && phpstan analyse --memory-limit 1G"
	}
}
