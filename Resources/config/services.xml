<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />
        <service id="emss.client" class="EMS\SubmissionBundle\Service\SubmissionClient">
            <argument type="service" id="EMS\ClientHelperBundle\Helper\Elasticsearch\ClientRequest"/>
            <argument type="tagged" tag="emss.handler"/>
        </service>
        <service id="emss.renderer" class="EMS\SubmissionBundle\Service\SubmissionRenderer">
            <argument type="service" id="twig" />
        </service>

        <service id="emss.emailhandler" class="EMS\SubmissionBundle\Handler\EmailHandler">
            <argument type="service" id="mailer"/>
            <argument type="service" id="emss.renderer"/>
            <tag name="emss.handler" />
        </service>
        <service id="emss.servicenowhandler" class="EMS\SubmissionBundle\Handler\ServiceNowHandler">
            <argument type="service" id="emss.renderer"/>
            <argument type="string">%emss.service_now_timeout%</argument>
            <tag name="emss.handler" />
        </service>
    </services>
</container>